FROM node:22-alpine AS builder
WORKDIR /app
COPY package*.json ./
RUN npm ci --omit=dev

FROM builder
COPY . .
RUN apk add --no-cache curl # Para health checks
RUN mkdir -p /app/uploads/banners
VOLUME ["/app/uploads"]
HEALTHCHECK --interval=30s --timeout=5s \
  CMD curl -f https://localhost:3000/health || exit 1

EXPOSE 3000
CMD ["node", "src/app.js"]
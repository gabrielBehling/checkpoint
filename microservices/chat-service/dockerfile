FROM node:22-alpine

# Cria e define o diretório de trabalho
WORKDIR /app

# 1. Copia APENAS os arquivos de dependências primeiro (para cache)
COPY package*.json ./

# 2. Instala dependências (incluindo build tools temporárias)
RUN apk add --no-cache --virtual .build-deps python3 make g++ \
    && npm install --production \
    && apk del .build-deps

# 3. Copia o resto do código fonte
COPY . .

# 3.1 Cria a pasta uploads no caminho desejado
RUN mkdir -p /app/Implementacao_Socket_Teste/uploads

# 4. Configurações adicionais
USER node
EXPOSE 3000
CMD ["node", "src/app.js"]